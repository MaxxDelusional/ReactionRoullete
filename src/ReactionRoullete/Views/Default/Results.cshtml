//</div>




        }

        function getEmojiByName(name) {

            switch (name) {
                case 'Happiness':
                    return '😁';
                case 'Fear':
                    return '😲';
                case 'Disgust':
                    return '😞';
                case 'Surprise':
                    return '😱';
                case 'Sadness':
                    return '😢';
                case 'Anger':
                    return '😠';
                case 'Contempt':
                    return '😔';
                case 'Neutral':
                default:
                    return '😶';

            }


        }
    </script>
}
